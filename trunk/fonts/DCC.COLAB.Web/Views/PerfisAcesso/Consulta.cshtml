<div class ="container-fluid">
    <legend>Perfis de Acesso - Consulta</legend>

    <table id="perfisAcessoTags" class="table hover table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Moderador</th>
                <th>Necessita de moderação</th>
                <th>Edita apenas conteúdo próprio</th>
                <th>Adiciona acervo</th>
                <th>Ativo</th>
                <th>Ações</th>
            </tr>
        </thead>
    </table>

    <div class="form-group">
        <div>
            <button id="btnNovo" name="btnNovo" class="btn btn-success">Novo Perfil de Acesso</button>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Novo Perfil de Acesso</h4>
            </div>

            <div class="modal-body">
                <form class="form-group-sm">
                    <input id="hdCodigo" name="hdCodigo" type="hidden" value="@ViewBag.perfilAcesso.codigo" />
                    <input id="perfilAtivo" name="perfilAtivo" type="hidden" value="@ViewBag.perfilAcesso.perfilAtivo" />

                    <!-- Text input-->
                    <div class="form-group">
                        <label for="txtNome" class="control-label">Nome:</label>
                        <input id="txtNome" name="txtNome" type="text" placeholder="Nome do Perfil de Acesso (ex. Editor)" class="form-control input-md" required="" value="@ViewBag.perfilAcesso.nome" />
                    </div>

                    <!-- Checkboxes input-->
                    <div class="checkbox">
                        <label>
                            <input id="perfilModerador" type="checkbox" value="@ViewBag.perfilAcesso.perfilModerador" onclick="$('#moderacaoConteudo').prop('checked', false);">
                            O perfil é moderador de conteudo
                        </label>
                    </div>

                    <!-- Checkboxes input-->
                    <div class="checkbox">
                        <label>
                            <input id="moderacaoConteudo" type="checkbox" value="@ViewBag.perfilAcesso.moderacaoConteudo" onclick="$('#perfilModerador').prop('checked', false);">
                            O perfil necessita de moderação para adicionar conteúdo
                        </label>
                    </div>

                    <!-- Checkboxes input-->
                    <div class="checkbox">
                        <label>
                            <input id="editaApenasConteudoProprio" type="checkbox" value="@ViewBag.perfilAcesso.editaApenasConteudoProprio">
                            O perfil altera apenas conteúdo próprio
                        </label>
                    </div>


                    <!-- Checkboxes input-->
                    <div class="checkbox">
                        <label>
                            <input id="permiteAdicaoAcervo" type="checkbox" value="@ViewBag.perfilAcesso.permiteAdicaoAcervo">
                            O perfil pode adicionar itens ao acervo
                        </label>
                    </div>

                    <!-- Inicio da Tabela de permissões -->
                    <table id="permissoesPerfilAcesso" class="table hover table-bordered" cellspacing="0" width="100%">
                        @foreach (var modulo in ViewBag.modulos)
                        {
                            <thead class="bg-info table-bordered">
                                <tr>
                                    <th>@modulo.nome</th>
                                    @foreach (var acao in ViewBag.acoes)
                                    {
                                        <th>
                                            <div class="text-center">
                                                @acao.nome
                                                <br />
                                                <input class="modulo_@modulo.codigo modulo_@acao.nome" type="checkbox" value="">
                                            </div>
                                        </th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var funcionalidade in ViewBag.funcionalidades)
                                {
                                    <tr>
                                        @if (funcionalidade.modulo.codigo == modulo.codigo)
                                        {
                                    
                                            <td>@funcionalidade.nome</td>
                                            
                                            //Redesenhar isso daqui
                                            foreach (var acao in ViewBag.acoes)
                                            {
                                            <td>
                                                @foreach (var funcionalidadeAcao in ViewBag.funcionalidadesEAcoes)
                                                {
                                                    if (funcionalidadeAcao.funcionalidade.codigo == funcionalidade.codigo)
                                                    {
                                                        if (funcionalidadeAcao.acao.codigo == acao.codigo)
                                                        {                                   
                                            
                                                    <div class="text-center">
                                                        <input class="func_@funcionalidade.codigo modulo_@modulo.codigo modulo_@acao.nome comboPermissao" type="checkbox" value="@funcionalidadeAcao.codigo">
                                                    </div>

                                                        }


                                                    }
                                                }
                                            </td>
                                            }
                                            // ate aqui!
                                        }
                                    </tr>
                                }
                            </tbody>
                        }
                    </table>
                    <!-- Fim da Tabela de permissões -->
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary" id="btnSalvar">Salvar</button>
            </div>
        </div>
    </div>
</div>

@section scripts
{

    <script type="text/javascript">

        var CarregarPerfilUsuarioParaEdicao = function (codigoPerfilUsuario) {
            SRV.ChamarAjax('@Url.Action("ObterPerfilAcesso", "PerfisAcesso")', { codigo: codigoPerfilUsuario }, CarregarPerfilUsuarioParaEdicao_cb);
        };

        var CarregarPerfilUsuarioParaEdicao_cb = function (json) {
            var index;
            $("#hdCodigo").val(json.codigo);
            $("#perfilAtivo").val(json.perfilAtivo);
            $("#txtNome").val(json.nome);
            $("#perfilModerador").prop('checked', json.perfilModerador);
            $("#permiteAdicaoAcervo").prop('checked', json.permiteAdicaoAcervo);
            $("#moderacaoConteudo").prop('checked', json.moderacaoConteudo);
            $("#editaApenasConteudoProprio").prop('checked', json.editaApenasConteudoProprio);
            for (index = 0; index < json.funcionalidadesPermitidas.length; index++) {
                $(".comboPermissao[value=" + json.funcionalidadesPermitidas[index].codigo + "]").prop('checked', true);
            }
            $('#myModal').modal();
        };

        var CarregarPerfilUsuarioParaCopia = function (codigoPerfilUsuario) {
            SRV.ChamarAjax('@Url.Action("ObterPerfilAcesso", "PerfisAcesso")', { codigo: codigoPerfilUsuario }, CarregarPerfilUsuarioParaCopia_cb);
        };

        var CarregarPerfilUsuarioParaCopia_cb = function (json) {
            var index;
            $("input:checkbox").prop('checked', false);
            $("#hdCodigo").val("");
            $("#txtNome").val("");                    
            $("#perfilAtivo").val(json.perfilAtivo);
            $("#perfilModerador").prop('checked', json.perfilModerador);
            $("#permiteAdicaoAcervo").prop('checked', json.permiteAdicaoAcervo);
            $("#moderacaoConteudo").prop('checked', json.moderacaoConteudo);
            $("#editaApenasConteudoProprio").prop('checked', json.editaApenasConteudoProprio);
            for (index = 0; index < json.funcionalidadesPermitidas.length; index++) {
                $(".comboPermissao[value=" + json.funcionalidadesPermitidas[index].codigo + "]").prop('checked', true);
            }
            $('#myModal').modal();
        };

        var ExcluirPerfilUsuario = function (codigoPerfilUsuario) {
            $.confirm({
                title: "Confirmação",
                text: "Deseja realmente excluir este registro?",
                confirm: function () {
                    ExcluirPerfilUsuarioAjax(codigoPerfilUsuario);
                },
                cancel: function () {
                    // nothing to do
                },
                confirmButton: "Sim",
                cancelButton: "Não",
                post: true
            });
        };

        var ExcluirPerfilUsuarioAjax = function (codigo) {
            SRV.ChamarAjax('@Url.Action("Excluir", "PerfisAcesso")', { codigo: codigo }, SucessoExcluir_cb);
        };

        var SucessoExcluir_cb = function (json) {
            Msg.success("Exclusão realizada com sucesso.", 3000);
            AtualizarListagem();
        };

        $("#btnSalvar").on('click', function () {
            var codigo = $.trim($("#hdCodigo").val());
            var nome = $.trim($("#txtNome").val());
            var perfilAtivo = $.trim($("#perfilAtivo").val());
            var moderacaoConteudo = $('#moderacaoConteudo').is(':checked');
            var editaApenasConteudoProprio = $('#editaApenasConteudoProprio').is(':checked');
            var perfilModerador = $('#perfilModerador').is(':checked');
            var permiteAdicaoAcervo = $('#permiteAdicaoAcervo').is(':checked');
            var permissoes = [];
            $(".comboPermissao").each(function (index) {
                if ($(this).is(':checked')) {
                    var obj = { 'codigo': parseInt($(this).val()) };
                    permissoes.push(obj);
                }
            });

            if (nome == "") {
                Msg.error("O nome do perfil é uma informação obrigatória. Favor conferir o preenchimento do campo.", 7000);
            }
            else {
                var params = {
                    'codigo': codigo,
                    'nome': nome,
                    'perfilModerador': perfilModerador,
                    'moderacaoConteudo': moderacaoConteudo,
                    'editaApenasConteudoProprio': editaApenasConteudoProprio,
                    'permiteAdicaoAcervo': permiteAdicaoAcervo,
                    'perfilAtivo': perfilAtivo,
                    'funcionalidadesPermitidas': permissoes
                };
                SRV.ChamarAjax('@Url.Action("Salvar", "PerfisAcesso")', params, SucessoSalvar_cb);
            }
        });

        var SucessoSalvar_cb = function (json) {
            $('#myModal').modal("hide");
            Msg.success("Perfil salvo com sucesso.", 3000);
            AtualizarListagem();
        };

        var AtualizarListagem = function () {
            $('#perfisAcessoTags').dataTable().fnDraw(false);
        };

        var InicializarListagem = function () {
            $('#perfisAcessoTags').dataTable({
                columns: [
                    { "data": "codigo", "name": "PA.id_perfil" },
                    { "data": "nome", "name": "PA.nome" },
                    { "data": "perfilModeradorString", "name": "PA.moderador" },
                    { "data": "moderacaoConteudoString", "name": "PA.necessita_moderacao_conteudo" },
                    { "data": "editaApenasConteudoProprioString", "name": "PA.edita_apenas_seu_conteudo" },
                    { "data": "permiteAdicaoAcervoString", "name": "PA.pode_adicionar_acervo" },
                    { "data": "perfilAtivoString", "name": "PA.ativo" },
                    { "data": "" }
                ],
                columnDefs: [
                    { targets: 0, visible: false, orderable: false, searchable: false },
                    {
                        targets: 7, orderable: false, searchable: false, width: "80px", sClass: "alignCenter", render: function (data, type, row) {
                            var acoes = "";
                            acoes += "<a href='#' onClick='CarregarPerfilUsuarioParaEdicao(" + row["codigo"] + ")'><img width='15px' title='editar' alt='Editar' src='/../Content/img/ic_editar.png' class='rowEditIcon'/></a>";
                            acoes += "&nbsp;&nbsp;";
                            acoes += "<a href='#' onClick='CarregarPerfilUsuarioParaCopia(" + row["codigo"] + ")'><img width='15px' title='copiar' alt='Copiar' src='/../Content/img/ic_copia.png' class='rowCopyIcon'/></a>";
                            acoes += "&nbsp;&nbsp;";
                            if (row["perfilAtivoString"] == "Sim") {
                                acoes += "<a href='#' onClick='AtivarOuDesativarPerfilUsuario(" + row["codigo"] + ", false)'><img width='15px' title='desativar' alt='Desativar' src='/../Content/img/ic_desativar.png' class='rowDeactivateIcon'/></a>";
                            }
                            else {
                                acoes += "<a href='#' onClick='AtivarOuDesativarPerfilUsuario(" + row["codigo"] + ", true)'><img width='15px' title='ativar' alt='Ativar' src='/../Content/img/ic_ativar.png' class='rowActivateIcon'/></a>";
                            }
                            acoes += "&nbsp;&nbsp;";                                                                        
                            acoes += "<a href='#' onClick='ExcluirPerfilUsuario(" + row["codigo"] + ")'><img width='15px' title='excluir' alt='Excluir' src='/../Content/img/bt_excluir.gif' class='rowDeleteIcon' codigo='" + row["codigo"] + "'/></a>";
                            return acoes;
                        }
                    },
                ],
                language: { url: "/../Content/dataTable_pt_BR.js", searchPlaceholder: "nome" },
                processing: true,
                serverSide: true,
                order: [[1, "asc"]],
                ajax: {
                    url: "@Url.Action("ListarPerfisAcesso", "PerfisAcesso")",
                    async: false,
                    type: 'POST',
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: function (d) {
                        return COLAB.ObterFiltroBaseDataTable(d);
                    }
                }
            });
        };

        $("input:checkbox").not(".comboPermissao").on('click', function () {
            if ($(this).prop('class').indexOf("modulo") > -1) {
                var classes = $(this).prop('class').replace(" ", ".");
                $('.comboPermissao.' + classes).prop('checked', $(this).is(':checked'));
                if (!($(this).prop('class').indexOf("Consultar") > -1)) {
                    var modulo = $(this).prop('class').split(' ')[0];
                    $('.' + modulo + '.modulo_Consultar').prop('checked', true);
                    if (($(this).prop('class').indexOf("Editar") > -1)) {
                        $('.' + modulo + '.modulo_Criar').prop('checked', true);
                    }
                }
            }
        });

        $("input:checkbox.comboPermissao").on('click', function () {
            if ($(this).is(':checked')) {
                if (!($(this).prop('class').indexOf("Consultar") > -1)) {
                    var classes = $(this).prop('class').split(' ')[0];
                    $('.comboPermissao.' + classes + '.modulo_Consultar').prop('checked', true);
                    if (($(this).prop('class').indexOf("Editar") > -1)) {
                        $('.comboPermissao.' + classes + '.modulo_Criar').prop('checked', true);
                    }
                }
            }
        });

        $("#btnNovo").on('click', function () {
            $("input:checkbox").prop('checked', false);
            $("#hdCodigo").val("");
            $("#txtNome").val("");
            //$("#selectIdioma").val(0);
            $('#myModal').modal();
            $("#txtNome").focus();
        });

        var AtivarOuDesativarPerfilUsuarioAjax = function (codigo, status) {
            SRV.ChamarAjax('@Url.Action("AtivarOuDesativarPerfil", "PerfisAcesso")', { codigo: codigo, status: status }, SucessoAtivarDesativar_cb);
        };

        var SucessoAtivarDesativar_cb = function (json) {
            $('#myModal').modal("hide");
            Msg.success("Perfil alterado com sucesso.", 3000);
            AtualizarListagem();
        };

        var AtivarOuDesativarPerfilUsuario = function (codigoPerfilUsuario, status) {
            var str = "";
            if (status) {
                str = "ativar";
            }
            else {
                str = "desativar";
            }

            $.confirm({
                title: "Confirmação",
                text: "Deseja realmente " + str + " este perfil de usuário?",
                confirm: function () {
                    AtivarOuDesativarPerfilUsuarioAjax(codigoPerfilUsuario, status);
                },
                cancel: function () {
                    // nothing to do
                },
                confirmButton: "Sim",
                cancelButton: "Não",
                post: true
            });
        };

        $(document).ready(function () {
            Msg.iconMode = "fa";
            InicializarListagem();
            COLAB.InicializarPropriedades();
        });

    </script>

}