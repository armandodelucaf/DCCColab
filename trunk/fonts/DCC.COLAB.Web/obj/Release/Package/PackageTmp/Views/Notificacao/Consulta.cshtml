@using DCC.COLAB.Common.AuxiliarEntities;
@using DCC.COLAB.Common.Entities;

@{
    
}

<div>
    <legend>Notificacões - Consulta</legend>

    <table id="tabelaNotificacoes" class="table hover table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Usuário</th>
                <th>Tipo</th>
                <th>Identificação</th>
                <th>Data</th>
                <th>Ações</th>
            </tr>
        </thead>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="cadastroDeNotificacao" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="modalNotificacaoLabel"></h4>
            </div>
            <div class="modal-body" style="overflow-y: inherit !important;">
                <form>
                    <input type="hidden" id="hdIdNotificacao" value="" />
                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-success" id="btnSalvar">Salvar notificacao</button>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    <script type="text/javascript">
        var CarregarNotificacaoParaEdicao = function (idNotificacao) {
            SRV.ChamarAjax('@Url.Action("ObterNotificacao", "Notificacao")', { codigo: idNotificacao }, CarregarNotificacaoParaEdicao_cb);
        };

        var CarregarNotificacaoParaEdicao_cb = function (json) {
            $('#modalNotificacaoLabel').text('Editar Notificacao');
            $("#hdIdNotificacao").val(json.id);
            $('#txtUrl').val(json.url);
            $('#txtTitulo').val(json.titulo);
            $('#txtDescricao').val(json.descricao);
            $('#selectTipo').val(json.tipo.id);
            
            $('#selectDisciplina').val(json.disciplina.id);
            $('#selectDisciplina').prop('disabled', true);

            $("#hdTemas").val(JSON.stringify(json.temasAssociados));
            if (json.temasAssociados.length > 0) {
                var temas = JSON.parse($('#hdTemas').val());
                var txtTemas = []
                for (i = 0; i < temas.length; i++) {
                    txtTemas.push(temas[i].nome);
                }
                $('#temasNotificacao').val(txtTemas.join(", "));
            }
            else {
                $('#temasNotificacao').val('');
            }
            ObterTemas(json.disciplina.id);

            $('#cadastroDeNotificacao').modal();
        };

        var DisciplinaAlterada = function () {
            var idDisciplina = parseInt($('#selectDisciplina').val());

            $("#hdTemas").val('');
            $('#temasNotificacao').val('');

            if (idDisciplina > 0) {
                ObterTemas(idDisciplina);
            }
        };

        var ObterTemas = function (idDisciplina) {
            SRV.ChamarAjax('@Url.Action("ObterTemas", "Notificacao")', { idDisciplina: idDisciplina }, ObterTemas_cb);
        }

        var split = function (val) {
            return val.split(/,\s*/);
        }

        var extractLast = function (term) {
            return split(term).pop();
        }

        var ObterTemas_cb = function (json) {
            var dataSet = $.map(json, function (value, index) {
                return { value: value.id, label: value.nome };
            });

            $('#temasNotificacao').autocomplete({
                minLength: 0,
                source: function (request, response) {
                    // delegate back to autocomplete, but extract the last term
                    response($.ui.autocomplete.filter(dataSet, extractLast(request.term)));
                },
                focus: function () {
                    // prevent value inserted on focus
                    return false;
                },
                select: function (event, ui) {
                    var temas = split(this.value);
                    // remove the current input
                    temas.pop();
                    // add the selected item
                    temas.push(ui.item.label);
                    // add placeholder to get the comma-and-space at the end
                    temas.push("");
                    this.value = temas.join(", ");

                    metrics = jQuery.grep(dataSet, function (element) {
                        return element.label != ui.item.label;
                    });

                    return false;
                },
                change: function (event, ui) {
                    var temas = split(this.value);
                    if (temas[temas.length - 1] === '') {
                        temas.pop();
                    }

                    var uniqueTemas = temas.filter(function (item, pos, self) {
                        return self.indexOf(item) == pos;
                    })
                    temas = uniqueTemas;

                    var temasObj = [];

                    $.each(temas, function (index, value) {
                        temaEncontrado = dataSet.filter(function (tag) { return tag.label.toUpperCase() == value.toUpperCase() })
                        if (temaEncontrado.length > 0) {
                            temasObj.push({ nome: temaEncontrado[0].label.toUpperCase(), id: temaEncontrado[0].value });
                        }
                    });
                    $('#hdTemas').val(JSON.stringify(temasObj));
                }
            }).focus(function () {
                $(this).data("uiAutocomplete").search($(this).val());
            }).click(function () {
                $(this).data("uiAutocomplete").search($(this).val());
            });
        };

        var ExcluirNotificacao = function (idNotificacao) {
            $.confirm({
                title: "Confirmação",
                text: "Deseja realmente excluir este notificacao?",
                confirm: function () {
                    ExcluirNotificacaoAjax(idNotificacao);
                },
                cancel: function () {
                    // nothing to do
                },
                confirmButton: "Sim",
                cancelButton: "Não",
                post: true
            });
        };

        var ExcluirNotificacaoAjax = function (id) {
            SRV.ChamarAjax('@Url.Action("Excluir", "Notificacao")', { codigo: id }, SucessoExcluir_cb);
        };

        var SucessoExcluir_cb = function (json) {
            Msg.success("Exclusão realizada com sucesso.", 3000);
            AtualizarListagem();
        };

        var AtualizarListagem = function () {
            $('#tabelaNotificacoes').dataTable().fnDraw(false);
        };
        
        var InicializarListagem = function () {
            $('#tabelaNotificacoes').dataTable({
                columns: [
                    { "data": "id", "name": "L.id_Notificacao" },
                    { "data": "titulo", "name": "L.titulo" },
                    { "data": "tipo.nome", "name": "TL.nm_Tipo_Notificacao" },
                    { "data": "disciplina.nome", "name": "D.nm_Disciplina" },
                    { "data": "" }
                ],
                columnDefs: [
                    { targets: 0, visible: false, orderable: false, searchable: false },
                    { targets: 3, orderable: false },
                    {
                        targets: 4, orderable: false, searchable: false, width: "80px", sClass: "alignCenter", render: function (data, type, row) {
                            var acoes = "";
                            acoes += "<a href='#' onClick='CarregarNotificacaoParaEdicao(" + row["id"] + ")'><img width='15px' title='editar' alt='Editar' src='/../Content/img/ic_editar.png' class='rowEditIcon'/></a>";
                            acoes += "&nbsp;&nbsp;";
                            acoes += "<a href='#' onClick='ExcluirNotificacao(" + row["id"] + ")'><img width='15px' title='excluir' alt='Excluir' src='/../Content/img/bt_excluir.gif' class='rowDeleteIcon' id='" + row["id"] + "'/></a>";
                            return acoes;
                        }
                    },
                ],
                language: { url: "/../Content/dataTable_pt_BR.js", searchPlaceholder: "titulo" },
                processing: true,
                serverSide: true,
                order: [[1, "asc"]],
                ajax: {
                    url: "@Url.Action("ListarNotificacoes", "Notificacao")",
                    async: false,
                    type: 'POST',
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: function (d) {
                        return COLAB.ObterFiltroBaseDataTable(d);
                    }
                }
            });
        };

        $('#btnNovo').click(function () {
            $('#modalNotificacaoLabel').text('Cadastrar Novo Notificacao');
            $("#hdIdNotificacao").val(0);
            $('#txtTitulo').val("");
            $('#txtDescricao').val("");
            $('#selectTipo').val(0);
            $('#txtUrl').val("");

            $('#selectDisciplina').val(0);
            $('#selectDisciplina').prop('disabled', false);

            $("#hdTemas").val("");
            $('#temasNotificacao').val("");

            $('#cadastroDeNotificacao').modal();
        });



        $('#btnSalvar').click(function () {
            var id = parseInt($("#hdIdNotificacao").val());
            var titulo = $.trim($('#txtTitulo').val());
            var descricao = $.trim($('#txtDescricao').val());
            var tipo = parseInt($('#selectTipo').val());
            var disciplina = parseInt($('#selectDisciplina').val());
            var url = $.trim($('#txtUrl').val());
            var temas = $.trim($("#hdTemas").val());

            if (!tipo) {
                Msg.error('O campo "Tipo" é obrigatório. Favor verificar a seleção do mesmo.', 4000);
            }
            else if (!disciplina) {
                Msg.error('O campo "Disciplina" é obrigatório. Favor verificar a seleção do mesmo.', 4000);
            }
            else if (!titulo) {
                Msg.error('O campo "Título" é obrigatório. Favor verificar o preenchimento do mesmo.', 4000);
            }
            else if (!url) {
                Msg.error('O campo "URL" é obrigatório. Favor verificar o preenchimento do mesmo.', 4000);
            }
            else {
                var params = {
                    'id': id,
                    'url': url,
                    'titulo': titulo,
                    'descricao': descricao,
                    'tipo': { 'id': tipo, 'nome': $('#selectTipo option:selected').text() },
                    'disciplina': { 'id': disciplina, 'nome': $('#selectDisciplina option:selected').text() }
                }

                if (temas) {
                    params.temasAssociados = JSON.parse(temas);
                }

                SRV.ChamarAjax('@Url.Action("Salvar", "Notificacao")', params, Salvar_cb);
            }
        });

        var Salvar_cb = function (json) {
            Msg.success('Cadastro efetuado com sucesso', 4000);
            $('#cadastroDeNotificacao').modal('hide');
            AtualizarListagem();
        };

        $(document).ready(function () {
            Msg.iconMode = "fa";
            InicializarListagem();
            COLAB.InicializarPropriedades();
        });
    </script>
}